{% extends 'navbar.html.twig' %}

{% block title %}{{ commerce.nom }}{% endblock %}

{% block body %}
    <div class="jumbotron jumboPagePerso" style="background-image: url({{ asset('pagePerso/'~commerce.image) }})">
        <div class="text-center">
            <h1 class="titlePagePerso">Bienvenue chez {{ commerce.nom }}</h1>
            <h3 class="titlePagePerso">{{ commerce.adresse }}, {{ commerce.ville }}, {{ commerce.codePostal }}</h3>
            <h4 class="titlePagePerso">{{ commerce.type }}</h4>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="text-center descriptionPagePerso col-lg-12">
                <h2>Description</h2>
                <p>{{ commerce.description|raw }}</p>
            </div>
            <div class="text-center">
                <h2>Nos produits</h2>
                <div>
                    <div class="col-lg-4 ">
                        <div class="cards">
                            <img class="imgCard" src="{{ asset('img/croissant.jpg') }}">
                            <h4>Cressant sausage</h4>
                        </div>
                    </div>
                    <div class="col-lg-4 ">
                        <div class="cards">
                            <img class="imgCard" src="{{ asset('img/olivePizza.jpg') }}">
                            <h4>Pizza olives</h4>
                        </div>
                    </div>
                    <div class="col-lg-4 ">
                        <div class="cards">
                            <img class="imgCard" src="{{ asset('img/pizzaOlive.jpg') }}">
                            <h4>Pizza Mushroom</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 text-center">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3232.861868367297!2d14.534602214772477!3d35.87690178014915!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x130e5b395a19135f%3A0x92b2a8cc0c78516b!2sPastizzeria!5e0!3m2!1sfr!2sfr!4v1486492944979" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>

